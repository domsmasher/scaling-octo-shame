*
    -moz-box-sizing: border-box
    -webkit-box-sizing: border-box
    box-sizing: border-box
    &:before
    &:after
        -moz-box-sizing: border-box
        -webkit-box-sizing: border-box
        box-sizing: border-box

html
    background: white;
    font-size: 62.5%;
    -webkit-overflow-scrolling: touch;
    -webkit-tap-highlight-color: #f3f5f6;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;

body
    font-family: serif
    margin: 0;
    padding: 0;
    width: 100%;
    background-color: rgb(255, 226, 185)
    font-size: 16px;
    line-height: 1.5;
    color: black;
a
    color: black
    text-decoration: none
    &:hover
        text-decoration: underline

ul
    margin: 0
    padding: 0
    list-style: none
    & li
        list-style: none
        padding: 5px 0
        clerfix()

img
    max-width: 100%

.header
    width: 100%
    padding: 1em
    background-color: #feaa7f
    border-top: 10px solid rgb(165, 83, 41)

.img-container
    position: relative
    float: left
    width: 125px
    height: 75px
    overflow: hidden

.list-item
    min-height: 75px
    margin-bottom: 15px
    a
        color: #1b2157

.text-container
     margin-left: 140px
     h3
        margin: 0
     p
        margin: .35em 0

.logo-container
    position: relative
    z-index: 30
    color: #fff;
    width: 305px
    margin: 0 auto
    &:before
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        content: ""
        background-color: #1b2157
        z-index: 2
    &:after
        position: absolute
        top: 0
        left: 0
        content: ""
        width: 0px;
        height: 0px;
        border-style: solid;
        border-width: 38px 38px 0 0;
        border-color: #e40136 transparent transparent transparent;
        z-index: 3
    h1
        margin: 0
        line-height: 1
    a
        color: #fff
        &:hover
            text-decoration: none
    .logo
        position: relative
        z-index: 4
        padding: 5px 10px

.main-content
    padding: 30px 10px

.claim
    font-family: 'League Gothic'
    color: #1b2157
    text-align: center
    margin-bottom: 0

@media screen and (min-width: 1024px)
    .logo-container
        display: inline-block
        vertical-align: top
        margin: 0

    .claim
        display: inline-block
        vertical-align: bottom
        margin: 35px 0 0 15px
        text-align: left
